<% if (username) { %>
  <p><%= username %></p>
  <form method="POST" action="/urls/logout"> <input type="submit" value="logout"></form>
<% } else { %>

<form action="/urls/login" method="POST" style="margin-bottom:20px">
<label for="username">Login</label>
<input id="username" type="text" name="username" placeholder="username" style="width: 300px">
<input type="submit" value="submit"></form>

<% } %>
